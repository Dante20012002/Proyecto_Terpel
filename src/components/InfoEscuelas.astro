---
export interface Props {
  title?: string;
  description?: string;
  videoSrc?: string;
  videoTitle?: string;
}

const {
  title = "Conoce todos los programas que capacitamos en Terpel",
  description = "Enterate de todos nuestros proyectos y módulos de capacitación en los que puedes ingresar. Realiza nuestras capacitaciones de Escuela de Promotores, Escuela de Administradores, EDS Confiable, entre muchos otros, en donde obtendras las certificaciones necesarias para tus labores en las estaciones de servicio.",
  videoSrc = "/media/videos/video_escuelas_terpel.mp4",
  videoTitle = "Video Escuelas Terpel"
} = Astro.props;
---

<section class="py-16 lg:py-20 bg-terpel-secondary" data-aos="fade-up">
  <div class="container-custom">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="space-y-6" data-aos="fade-right">
        <h2 class="text-3xl lg:text-4xl font-bold text-terpel-light leading-tight">
          {title}
        </h2>
        <p class="text-lg text-terpel-accent leading-relaxed">
          {description}
        </p>
      </div>
      
      <div class="relative" data-aos="fade-left">
        <div class="relative aspect-video rounded-lg overflow-hidden shadow-2xl bg-black">
          <video
            width="100%"
            height="100%"
            controls
            preload="metadata"
            class="w-full h-full object-cover"
            poster="/media/img/Logo Terpel Escuelas.png"
          >
            <source src={videoSrc} type="video/mp4">
            <div class="absolute inset-0 flex items-center justify-center bg-gray-800 text-white">
              <div class="text-center">
                <p class="mb-4">Tu navegador no soporta videos HTML5.</p>
                <a 
                  href={videoSrc} 
                  class="btn-primary inline-block"
                  download
                >
                  Descargar video
                </a>
              </div>
            </div>
          </video>
          
          <!-- Play button overlay -->
          <div class="absolute inset-0 flex items-center justify-center bg-black/20 opacity-0 hover:opacity-100 transition-opacity duration-300 pointer-events-none">
            <div class="w-16 h-16 bg-terpel-primary rounded-full flex items-center justify-center">
              <svg class="w-8 h-8 text-white ml-1" fill="currentColor" viewBox="0 0 24 24">
                <path d="M8 5v14l11-7z"/>
              </svg>
            </div>
          </div>
        </div>
        
        <!-- Decorative elements -->
        <div class="absolute -top-4 -right-4 w-24 h-24 bg-terpel-primary/20 rounded-full blur-xl"></div>
        <div class="absolute -bottom-4 -left-4 w-32 h-32 bg-terpel-accent/10 rounded-full blur-xl"></div>
      </div>
    </div>
  </div>
</section>
