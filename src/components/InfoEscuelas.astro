---
export interface Props {
  title?: string;
  description?: string;
  videoUrl?: string;
  videoTitle?: string;
  thumbnailSrc?: string;
}

const {
  title = "Conoce todos los programas que capacitamos en Terpel",
  description = "Enterate de todos nuestros proyectos y módulos de capacitación en los que puedes ingresar. Realiza nuestras capacitaciones de Escuela de Promotores, Escuela de Administradores, EDS Confiable, entre muchos otros, en donde obtendras las certificaciones necesarias para tus labores en las estaciones de servicio.",
  videoUrl = "https://grupospira-my.sharepoint.com/personal/santiago_puentes_spira_co/_layouts/15/stream.aspx?id=%2Fpersonal%2Fsantiago%5Fpuentes%5Fspira%5Fco%2FDocuments%2FSANTIAGO%20PUENTES%2FVideo%20Escuelas%20Terpel%20v3%2Emp4&nav=eyJyZWZlcnJhbEluZm8iOnsicmVmZXJyYWxBcHAiOiJPbmVEcml2ZUZvckJ1c2luZXNzIiwicmVmZXJyYWxBcHBQbGF0Zm9ybSI6IldlYiIsInJlZmVycmFsTW9kZSI6InZpZXciLCJyZWZlcnJhbFZpZXciOiJNeUZpbGVzTGlua0NvcHkifX0&ga=1&referrer=StreamWebApp%2EWeb&referrerScenario=AddressBarCopied%2Eview%2E8e97dada%2D6f5f%2D4972%2D9ba8%2Dfbcdab36d61d",
  videoTitle = "Video Escuelas Terpel",
  thumbnailSrc = "/media/img/Escuela de Promotores.png"
} = Astro.props;
---

<section class="section-padding bg-terpel-secondary" data-aos="fade-up">
  <div class="container-custom">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
      <div class="space-y-4 lg:space-y-6" data-aos="fade-right">
        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-terpel-light leading-tight">
          {title}
        </h2>
        <p class="text-base sm:text-lg text-terpel-accent leading-relaxed">
          {description}
        </p>
      </div>
      
      <div class="relative" data-aos="fade-left">
        <div class="relative aspect-video rounded-lg overflow-hidden shadow-2xl bg-black group">
          <!-- Imagen clickeable del video -->
          <a 
            href={videoUrl} 
            target="_blank" 
            rel="noopener noreferrer"
            class="block w-full h-full relative overflow-hidden rounded-lg transition-transform duration-300 group-hover:scale-105"
          >
            <!-- Imagen de fondo/thumbnail -->
            <img 
              src={thumbnailSrc}
              alt={videoTitle}
              class="w-full h-full object-cover"
            />
            
            <!-- Overlay oscuro para mejor contraste -->
            <div class="absolute inset-0 bg-black/40 group-hover:bg-black/20 transition-colors duration-300"></div>
            
            <!-- Botón de play central -->
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="bg-white/90 hover:bg-white rounded-full p-6 transition-all duration-300 transform group-hover:scale-110 shadow-2xl">
                <svg class="w-12 h-12 text-terpel-primary ml-1" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M8 5v14l11-7z"/>
                </svg>
              </div>
            </div>
            
            <!-- Texto informativo en la parte inferior -->
            <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 to-transparent p-3 sm:p-4 lg:p-6">
              <div class="text-white">
                <h3 class="text-lg sm:text-xl font-bold mb-1 sm:mb-2">{videoTitle}</h3>
                <div class="flex items-center text-xs sm:text-sm opacity-90">
                  <svg class="w-3 h-3 sm:w-4 sm:h-4 mr-1 sm:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                  <span class="hidden sm:inline">Haz clic para ver el video</span>
                  <span class="sm:hidden">Ver video</span>
                </div>
              </div>
            </div>
            
            <!-- Indicador de video en esquina superior -->
            <div class="absolute top-4 right-4 bg-terpel-primary text-white px-3 py-1 rounded-full text-sm font-semibold">
              VIDEO
            </div>
          </a>
        </div>
        
        <!-- Decorative elements -->
        <div class="absolute -top-4 -right-4 w-24 h-24 bg-terpel-primary/20 rounded-full blur-xl"></div>
        <div class="absolute -bottom-4 -left-4 w-32 h-32 bg-terpel-accent/10 rounded-full blur-xl"></div>
      </div>
    </div>
  </div>
</section>
