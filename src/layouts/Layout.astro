---
import '../styles/global.css';
import 'aos/dist/aos.css';

export interface Props {
  title?: string;
  description?: string;
}

const { title = "Escuelas 360", description = "Plataforma de formación Terpel" } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  
  <body class="font-terpel text-terpel-light bg-white antialiased">
    <slot />
    
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="../scripts/reveal-animations.js"></script>
    <script>
      // Inicializar AOS cuando el DOM esté listo
      document.addEventListener('DOMContentLoaded', function() {
        // Esperar un poco para que AOS se cargue completamente
        setTimeout(function() {
          try {
            if (typeof AOS !== 'undefined') {
              AOS.init({
                duration: 800,
                easing: 'ease-in-out',
                once: true,
                offset: 120
              });
              console.log('✅ AOS inicializado correctamente');
            } else {
              console.warn('⚠️ AOS no disponible, continuando sin animaciones');
            }
          } catch (error) {
            console.error('❌ Error inicializando AOS:', error);
          }
        }, 100);
      });
    </script>
  </body>
</html>

