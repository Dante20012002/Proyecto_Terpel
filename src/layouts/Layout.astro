---
import '../styles/global.css';
import 'aos/dist/aos.css';

export interface Props {
  title?: string;
  description?: string;
}

const { title = "Escuelas Terpel", description = "Plataforma de formación Terpel" } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth no-scrollbar">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  
  <body class="font-terpel text-terpel-light bg-white antialiased">
    <slot />
    
    <script src="../scripts/reveal-animations.js"></script>
    <script>
      // Cargar e inicializar AOS usando import dinámico
      (async function() {
        try {
          // Importar AOS dinámicamente
          const { default: AOS } = await import('https://cdn.skypack.dev/aos@2.3.4');
          
          // Esperar a que el DOM esté listo
          if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initAOS);
          } else {
            initAOS();
          }
          
          function initAOS() {
            try {
              AOS.init({
                duration: 800,
                easing: 'ease-in-out',
                once: true,
                offset: 120,
                disable: false,
                startEvent: 'DOMContentLoaded',
                initClassName: 'aos-init',
                animatedClassName: 'aos-animate',
                useClassNames: false,
                disableMutationObserver: false,
                debounceDelay: 50,
                throttleDelay: 99
              });
              console.log('✅ AOS inicializado correctamente');
            } catch (initError) {
              console.error('❌ Error inicializando AOS:', initError);
            }
          }
        } catch (error) {
          console.error('❌ Error cargando AOS:', error);
          console.warn('⚠️ Continuando sin animaciones AOS');
        }
      })();
    </script>
  </body>
</html>

