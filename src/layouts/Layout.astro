---
import '../styles/global.css';
import 'aos/dist/aos.css';

export interface Props {
  title?: string;
  description?: string;
}

const { title = "Escuelas 360", description = "Plataforma de formación Terpel" } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  
  <body class="font-terpel text-terpel-light bg-white antialiased">
    <slot />
    
    <script src="../scripts/reveal-animations.js"></script>
    <script>
      import AOS from 'aos';
      
      // Inicializar AOS cuando el DOM esté listo
      document.addEventListener('DOMContentLoaded', function() {
        try {
          AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true,
            offset: 120
          });
          console.log('✅ AOS inicializado correctamente');
        } catch (error) {
          console.error('❌ Error inicializando AOS:', error);
        }
      });
    </script>
  </body>
</html>

